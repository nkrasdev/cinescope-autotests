# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf diff=python

# Shell scripts
*.sh text eol=lf

# Configuration files
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.json text eol=lf
*.ini text eol=lf
*.cfg text eol=lf
.env* text eol=lf
.editorconfig text eol=lf

# Documentation
*.md text eol=lf
*.rst text eol=lf
*.txt text eol=lf

# Makefile
Makefile text eol=lf

# Git files
.gitignore text eol=lf
.gitattributes text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.pyc binary
*.pyo binary
*.so binary
*.dylib binary
*.dll binary
*.exe binary

# Archives
*.zip binary
*.tar binary
*.gz binary
*.bz2 binary
*.7z binary

# Jupyter notebooks
*.ipynb text eol=lf linguist-language=Python
